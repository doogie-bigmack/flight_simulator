# Test Environment Configuration (example)
# Copy this file to .env.test to customize your test environment

# Test environment selection
TEST_ENV=test

# Log settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database settings
DATABASE_URL=sqlite:///test.db

# Test settings
TEST_MODE=true
DISABLE_AUTH=true

# Performance testing settings
PERF_TEST_FRAMES=600
PERF_TEST_TARGET_FPS=60
PERF_TEST_DURATION=10

# Child-friendly content settings
CENSORSHIP_ENABLED=true
AGE_APPROPRIATE_CONTENT=true
DIFFICULTY_LEVEL=easy

# Audio test settings
AUDIO_TEST_ENABLED=true
AUDIO_MUTED_FOR_TESTS=true

# Visual feedback test settings
VISUAL_FEEDBACK_ENABLED=true
